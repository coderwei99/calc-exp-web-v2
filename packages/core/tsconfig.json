{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "target": "es2018",
    "module": "esnext",
    "declaration": true,
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}